<div class="container">
          <%= image_tag @photo.image, class: "item-img" %><br>
                <%= @photo.title %><br>
            by  <%= @photo.nickname %>さん<br>



    <% if user_signed_in? %>
      <%= form_with(model: [@photo, @comment], local: true) do |form| %>
        <%= form.label :comment %><br />
        <%= form.text_area :text,rows: "2" %><br>           
        <div class="actions">
        <%= form.submit "SEND", class: :form__btn %>
        </div>
      <% end %>
    <% else %>
      <strong><p>※※※ コメントの投稿には新規登録/ログインが必要です ※※※</p></strong>
    <% end %>

    <div class="comments">
      <h4>＜コメント一覧＞</h4>
      <% @comments.each do |comment| %>
        <p>
          <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %>：</strong>
          <%= comment.text %>
        </p>
      <% end %>
    </div>
  </div>