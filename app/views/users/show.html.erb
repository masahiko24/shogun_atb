
<div class="show wrapper">
<div class="show-page">
  <div class="table">
  <%= "#{@user.name}" %>さんの投稿一覧
   </div> 
<%# 
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
        </tbody>
      </table> 
      
     <div class='grid'>
      <% @photos.each do |photo|  %>
         <div class='item'>
          <%= link_to photo_path(photo.id), method: :get do %>
                <%= image_tag photo.image, class: "item-img" %><br>
                <div class="item-main">
                タイトル:  <%= photo.title %><br>
                メモ:  <%= photo.memo %><br>
                作成日:  <%= l photo.created_at, format: :short %></td>
                </div>
      <% end %>
      </div>
      <% end %>
      
        <% if @photos[0] == nil %>
      <div class='list'>
        <%= link_to(new_photo_path) do %>
        <div class='item-info'>
            <%= image_tag('画像投稿.png', class: "post-image-mypage") %>

          </div>
        </div>
        <% end %>
      </div>
      <% end %>
      
      </div>
  </div>
</div>
 <%= link_to(new_photo_path, class: 'purchase-btn') do %>
     <span class='purchase-btn-text'>投稿する</span>
<%= image_tag('水引2.jpeg' , size: '65x50' ,class: "purchase-btn-icon") %>
    <% end %>