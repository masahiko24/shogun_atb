
<div class="show wrapper">

  <p><%= "#{@user.name}" %>さんの投稿一覧</p>

<%# 
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.name %></td>
          </tr>
         
        </tbody>
      </table> 
      
     <div class='grid'>

      <% @photos.each do |photo|  %>
         <div class='item'>
          <%= link_to photo_path(photo.id), method: :get do %>
                <%= image_tag photo.image, class: "item-img" %><br>
                タイトル:  <%= photo.title %><br>
                メモ:  <%= photo.memo %><br>
                作成日:  <%= l photo.created_at, format: :short %></td>
                      <% end %>

      </div>
      <% end %>
      </div>

  </div>

 <%= link_to(new_photo_path, class: 'purchase-btn') do %>
     <span class='purchase-btn-text'>投稿する</span>
         <%= image_tag '水引2.jpeg' , size: '65x50' ,class: "purchase-btn-icon" %>

    <% end %>